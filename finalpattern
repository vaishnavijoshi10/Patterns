#include <iostream>
using namespace std;

int main()
{
   int n,i,j,k;
   cin>> n;

  int l,c;
   i=1;
   

   while(i<=n){
     j=1;
     k=i+1;
     l=1;
     c=n-i+1;
       while(j<=n-i+1){
          cout<<j;
          j++;
       }
       
       int star1=i-1;
       while(star1){
           cout<<"*";
          
          star1--;
           
       }
       
        int star2=i-1;
       while(star2){
           cout<<"*";
          
          star2--;
           
       }
       
       
       while(l<=n-i+1){
          cout<<c ;
          c--;
          l++;
       }
       
       
       
       
       cout<<endl;
       
      
       i++;
       
   }
    return 0;
}
