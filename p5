#include <iostream>
using namespace std;

int main()
{
   int n,i,j,k;
   cin>> n;

  
   i=1;
   
    
   while(i<=n){
     j=1;
     k=1;
       while(j<=i-1){
          cout<<" ";
          
          j++;
       }
       while(k<=n-i+1){
           cout<<"*";
           k++;
       }
       cout<<endl;
       
       
       i++;
       
   }
    return 0;
}
